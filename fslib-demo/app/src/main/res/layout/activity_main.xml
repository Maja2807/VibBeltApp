<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/default_small_horizontal_margin"
            android:paddingLeft="@dimen/default_horizontal_margin"
            android:paddingRight="@dimen/default_vertical_margin"
            android:paddingTop="@dimen/default_small_vertical_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary">

            <!-- Title -->
            <TextView
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- FeelSpace logo -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_feelspace_logo"/>

        </LinearLayout>

        <!-- Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_small_horizontal_margin"
                android:layout_marginLeft="@dimen/default_small_horizontal_margin"
                android:layout_marginRight="@dimen/default_small_vertical_margin"
                android:layout_marginTop="@dimen/default_small_vertical_margin"
                android:orientation="vertical">

                <!-- Section: Scan and connection -->
                <TextView
                    android:text="@string/activity_main_connection_scan_connection_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <!-- Scan for belt button -->
                <Button
                    android:id="@+id/activity_main_scan_for_belt_button"
                    android:text="@string/activity_main_scan_for_belt_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Search and connect button -->
                <Button
                    android:id="@+id/activity_main_search_and_connect_button"
                    android:text="@string/activity_main_search_and_connect_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Disconnect button -->
                <Button
                    android:id="@+id/activity_main_disconnect_button"
                    android:text="@string/activity_main_disconnect_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Connection state label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_connection_status_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_connection_status_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Belt firmware version -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_firmware_version_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_firmware_version_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_small_horizontal_margin"
                    android:layout_marginBottom="@dimen/default_small_horizontal_margin"
                    android:background="@android:color/darker_gray" />

                <!-- Section: Belt mode -->
                <TextView
                    android:text="@string/activity_main_belt_mode_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">

                    <!-- Wait mode button -->
                    <Button
                        android:id="@+id/activity_main_wait_mode_button"
                        android:text="@string/activity_main_wait_mode_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- Pause mode button -->
                    <Button
                        android:id="@+id/activity_main_pause_mode_button"
                        android:text="@string/activity_main_pause_mode_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">

                    <!-- Compass mode button -->
                    <Button
                        android:id="@+id/activity_main_compass_mode_button"
                        android:text="@string/activity_main_compass_mode_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <!-- App mode button -->
                    <Button
                        android:id="@+id/activity_main_app_mode_button"
                        android:text="@string/activity_main_app_mode_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </LinearLayout>

                <!-- Current belt mode label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_current_belt_mode_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_current_belt_mode_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_small_horizontal_margin"
                    android:layout_marginBottom="@dimen/default_small_horizontal_margin"
                    android:background="@android:color/darker_gray" />

                <!-- Section: Default vibration intensity -->
                <TextView
                    android:text="@string/activity_main_default_intensity_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <!-- Default intensity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_default_intensity_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_default_intensity_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Default intensity slider -->
                <TextView
                    android:text="@string/activity_main_set_intensity_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <SeekBar
                        android:id="@+id/activity_main_set_intensity_slider"
                        android:max="95"
                        android:progress="45"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <Button
                        android:id="@+id/activity_main_set_intensity_button"
                        android:text="@string/activity_main_set_intensity_default_button_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_small_horizontal_margin"
                    android:layout_marginBottom="@dimen/default_small_horizontal_margin"
                    android:background="@android:color/darker_gray" />

                <!-- Section: Vibration signal -->
                <TextView
                    android:text="@string/activity_main_signal_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <!-- Warning signal button -->
                <Button
                    android:id="@+id/activity_main_warning_signal_button"
                    android:text="@string/activity_main_warning_signal_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Battery signal button -->
                <Button
                    android:id="@+id/activity_main_battery_signal_button"
                    android:text="@string/activity_main_battery_signal_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Destination reached signal button -->
                <Button
                    android:id="@+id/activity_main_destination_reached_signal_button"
                    android:text="@string/activity_main_destination_reached_signal_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_small_horizontal_margin"
                    android:layout_marginBottom="@dimen/default_small_horizontal_margin"
                    android:background="@android:color/darker_gray" />

                <!-- Section: Vibration command -->
                <TextView
                    android:text="@string/activity_main_vibration_command_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <!-- Vibrate at angle slider -->
                <TextView
                    android:text="@string/activity_main_vibrate_at_angle_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading" />
                <SeekBar
                    android:id="@+id/activity_main_vibrate_at_angle_slider"
                    android:max="359"
                    android:progress="0"
                    android:layout_marginBottom="@dimen/default_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <Button
                        android:id="@+id/activity_main_vibrate_at_angle_start_button"
                        android:text="@string/activity_main_vibrate_at_angle_start_default_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/activity_main_vibrate_at_angle_stop_button"
                        android:text="@string/activity_main_vibrate_at_angle_stop_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <!-- Vibrate at magnetic bearing slider -->
                <TextView
                    android:text="@string/activity_main_vibrate_at_magnetic_bearing_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading" />
                <SeekBar
                    android:id="@+id/activity_main_vibrate_at_magnetic_bearing_slider"
                    android:max="359"
                    android:progress="0"
                    android:layout_marginBottom="@dimen/default_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <Button
                        android:id="@+id/activity_main_vibrate_at_magnetic_bearing_start_button"
                        android:text="@string/activity_main_vibrate_at_magnetic_bearing_start_default_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/activity_main_vibrate_at_magnetic_bearing_stop_button"
                        android:text="@string/activity_main_vibrate_at_magnetic_bearing_stop_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <!-- Pulse at angle slider -->
                <TextView
                    android:text="@string/activity_main_pulse_at_angle_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading" />
                <SeekBar
                    android:id="@+id/activity_main_pulse_at_angle_slider"
                    android:max="359"
                    android:progress="0"
                    android:layout_marginBottom="@dimen/default_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <Button
                        android:id="@+id/activity_main_pulse_at_angle_start_button"
                        android:text="@string/activity_main_pulse_at_angle_start_default_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/activity_main_pulse_at_angle_stop_button"
                        android:text="@string/activity_main_pulse_at_angle_stop_button_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <!-- Stop vibration button -->
                <Button
                    android:id="@+id/activity_main_stop_vibration_button"
                    android:text="@string/activity_main_stop_vibration_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_small_horizontal_margin"
                    android:layout_marginBottom="@dimen/default_small_horizontal_margin"
                    android:background="@android:color/darker_gray" />

                <!-- Section: Pulse commands -->
                <TextView
                    android:text="@string/activity_main_pulse_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <!-- Pulse East -->
                <Button
                    android:id="@+id/activity_main_pulse_east_button"
                    android:text="@string/activity_main_pulse_east_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Pulse Left -->
                <Button
                    android:id="@+id/activity_main_pulse_left_button"
                    android:text="@string/activity_main_pulse_left_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Section: Buzzer commands -->
                <TextView
                    android:text="@string/activity_main_buzzer_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <!-- Single beep -->
                <Button
                    android:id="@+id/activity_main_single_beep_button"
                    android:text="@string/activity_main_single_beep_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Tone pattern -->
                <Button
                    android:id="@+id/activity_main_tone_pattern_button"
                    android:text="@string/activity_main_tone_pattern_button_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin" />

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_small_horizontal_margin"
                    android:layout_marginBottom="@dimen/default_small_horizontal_margin"
                    android:background="@android:color/darker_gray" />

                <!-- Section: Orientation -->
                <TextView
                    android:text="@string/activity_main_orientation_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <!-- Belt heading -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_belt_heading_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_belt_heading_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Orientation accuracy flag -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_orientation_accurate_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_orientation_accurate_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Box heading-pitch-roll -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_box_heading_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center" />
                    <TextView
                        android:text="@string/activity_main_box_pitch_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center" />
                    <TextView
                        android:text="@string/activity_main_box_roll_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/activity_main_box_heading_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center"
                        android:textColor="@color/colorLabel" />
                    <TextView
                        android:id="@+id/activity_main_box_pitch_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center"
                        android:textColor="@color/colorLabel" />
                    <TextView
                        android:id="@+id/activity_main_box_roll_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Orientation accuracy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_fusion_status_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center" />
                    <TextView
                        android:text="@string/activity_main_mag_status_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center" />
                    <TextView
                        android:text="@string/activity_main_accuracy_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textAlignment="center" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/activity_main_fusion_status_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorLabel" />
                    <TextView
                        android:id="@+id/activity_main_mag_status_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorLabel" />
                    <TextView
                        android:id="@+id/activity_main_accuracy_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/default_small_horizontal_margin"
                    android:layout_marginBottom="@dimen/default_small_horizontal_margin"
                    android:background="@android:color/darker_gray" />

                <!-- Section: Battery -->
                <TextView
                    android:text="@string/activity_main_battery_section_heading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/colorHeading"
                    android:textStyle="bold" />

                <!-- Power status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_power_status_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_power_status_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Battery level -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_battery_level_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_battery_level_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- TTE/TTF -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_tte_ttf_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_tte_ttf_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

                <!-- Current -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_small_vertical_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:text="@string/activity_main_current_heading_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorHeading" />
                    <TextView
                        android:id="@+id/activity_main_current_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/colorLabel" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>